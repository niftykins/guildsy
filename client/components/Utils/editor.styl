$inputPadding = 0.75rem

.editor
	border 1px solid $greyLight
	border-radius $borderRadius
	height 100%

	textarea
		$font-family()
		width 100%
		max-width 100%
		height 100%
		padding $inputPadding
		font-size 16px
		color $black
		appearance none
		outline 0
		line-height 1.2
		resize none
		border none
		border-radius $borderRadius
		font-weight 300
