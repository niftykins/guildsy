$tilePadding = 1rem

.explore-groups
	padding 2rem

	.tiles
		display flex
		flex-wrap wrap
		margin-left $tilePadding * -1
		margin-right $tilePadding * -1

		.tile
			box-sizing content-box
			padding $tilePadding
			width 150px

			img
				display block
				margin-bottom 0.5rem
				width 150px
				height @width
				border-radius $borderRadius

			.name
				overflow ellipsis
				font-size 14px

			.members
				color $grey
				font-size 12px
				overflow ellipsis

.create-group-side-bar
	position relative
	width 20rem
	background-color #f2f2f2
	flex-shrink 0
	flex-grow 0

	a
		$vertical-center()
		display block
		text-align center
		color $grey
		padding 2rem
		font-size 20px
