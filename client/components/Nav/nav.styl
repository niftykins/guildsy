$pickerWidth = 4rem

.nav
	display flex
	flex-shrink 0

.group-picker
	display flex
	flex-shrink 0
	flex-direction column
	justify-content space-between
	width $pickerWidth
	background-color $paleBlack
	z-index 1

	.create-icon
		color $lightWhite
		text-align center
		height 64px

		i
			font-size 36px
			line-height @height - 1

	.group-icon-wrapper
		margin-top 1rem

	.group-icon
		display block
		box-sizing content-box
		width 2.25rem
		height @width
		border-radius $borderRadius
		margin auto
		line-height "calc(%s - 1px)" % @height
		text-align center
		background-color $lightWhite
		cursor pointer
		border 3px solid transparent
		font-size 20px
		color $lightBlack
		opacity 0.5
		transition opacity 250ms ease-out

		&.active
			opacity 1
			border-color $lightWhite

.nav-menu
	position relative
	left $pickerWidth * -1
	padding-left $pickerWidth
	width $pickerWidth + 14rem
	background-color #4d394b
	transition width 250ms ease-out

	&.empty-frame
		width $pickerWidth

	.header
		padding 1rem 1rem 0.5rem
		color $white
		cursor pointer

		&:hover
			background-color $slightBlack

			.group-name i
			.member-name
				color $white

		.group-name
			display flex
			align-items center

			span
				$bold-font()
				font-size 18px
				overflow ellipsis

			i
				order 1
				width 1.5rem
				text-align center
				font-size 16px
				color $lightWhite

		.member-name
			margin-top 0.25rem
			font-size 14px
			color $lightWhite
			overflow ellipsis
			font-weight 300
