.members-page
	padding 2rem

	.member
		display block
		padding 1rem 0
		border-top 1px solid $cardBorderColour

		&:first-child
			padding-top 0
			border-top none

		&:last-child
			padding-bottom 0

		img
			width 50px
			height @width
			margin-right 1rem
			border-radius $borderRadius

		img, .info
			display inline-block
			vertical-align middle

.member-page
	form
		h1
			text-align center

		img
			display block
			margin 0 auto 2rem
			width 150px
			height @width
			border-radius $borderRadius
