$splitScreenOrange = #fdae69
$uniconBlue = #bcdfe6

.split-screen
	width 100%
	height 100%
	overflow hidden

	.split-pane-left
	.split-pane-right
		height 100%
		transition background-color 200ms ease-out 0s

	.split-pane-left
		width 50%
		min-width 30rem
		max-width 39pc
		float left

		& > *
			flex-grow 0
			flex-shrink 0
			flex-basis auto

	.split-pane-right
		background-color $greyBackgroundColour
		width auto
		overflow hidden

		&.orange-pane
			background-color $splitScreenOrange

		&.unicorn-pane
			background-color $uniconBlue

		.image
			height 100%
			background-position 0 50%
			background-repeat no-repeat
			background-size contain

	.split-pane-flex-wrapper
		position relative
		display flex
		flex-direction column
		justify-content space-between
		min-height 100%

	.brand
		margin 1rem

	h1
		font-size 48px
		line-height 1
		font-weight 300
		margin-bottom 2rem
		color $blackDark

	.form-body
		padding 0 12%
		align-self center
		width 100%

	.controls
		padding 0.5rem 12% 2rem
		text-align center

		.button
			margin 0 auto

	.bullets
		margin 1rem auto
		cursor default
		font-size 0
		max-height 1.5rem
		user-select none

		span
			position relative
			top -0.5rem
			color $greyLight
			font-size 1.75rem
			padding-right 0.1875rem

			&:last-child
				padding-right 0

			&.active
				color $blackDark
