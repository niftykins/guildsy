$font-family()
	font-family -apple-system, BlinkMacSystemFont,
		"Segoe UI", "Roboto", "Oxygen",
		"Ubuntu", "Cantarell", "Fira Sans",
		"Droid Sans", "Helvetica Neue", sans-serif

$bold-font()
	font-weight 600

$vertical-center()
	position absolute
	top 50%
	transform translateY(-50%)

$flex-expand()
	flex-grow 1
	flex-shrink 1
	flex-basis auto
