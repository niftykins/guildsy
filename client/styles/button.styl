.button-group
	margin-top 1rem
	text-align right

	.button
		display inline-block
		margin-right 0.5rem

		&:last-child
			margin-right 0

.button
	$font-family()
	$bold-font()
	position relative
	display table
	user-select none
	color $black
	text-decoration none
	cursor pointer
	border none
	border-radius $borderRadius
	text-shadow 0 1px 1px rgba(0, 0, 0, 0.1)
	text-align center
	white-space nowrap
	padding 1rem 2rem
	font-size 20px
	line-height 1
	outline 0

	&:hover
	&:focus
		box-shadow inset 0 -2px rgba(0, 0, 0, 0.25)

	&:active
		box-shadow inset 0 2px 1px rgba(0, 0, 0, 0.2) !important

	&.small
		padding 0.5rem 1rem
		font-size 16px

	&.fluid
		width 100%

	&.green
		color $white
		background-color $green

	&.blue
		color $white
		background-color $blue

	&.outline
		background-color $greyLighter
		text-shadow none
		border 1px solid $greyLight

		&:hover
		&:focus
			background-color $white
			box-shadow none

	&.disabled
		color $white
		background-color $grey
		opacity 0.35
		pointer-events none
